<%= render partial: 'layouts/section_title', locals: { section_title: 'New Recipe' } %>
<%= form_with(model: [@recipe], url: recipes_path, local: true) do |f| %>
  <div class="d-flex flex-column gap-3">
    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control"%>
    </div>
    <div>
      <%= f.label :preparation_time, class: "form-label" %>
      <%= f.number_field :preparation_time, class: "form-control", step: '0.1' %>
    </div>
    <div>
      <%= f.label :cooking_time, class: "form-label" %>
      <%= f.number_field :cooking_time, class: "form-control", step: '0.1' %>
    </div>
    <div>
      <%= f.label :description, class: "form-label" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="text-end mt-3">
      <%= f.submit class: "btn btn-primary btn-sm"%>
    </div>
  </div>
<% end %>
